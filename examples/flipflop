#! /usr/bin/env ruby

# An example of subcommands

require "clamp"

class FlipFlop < Clamp::Command
	
	option ["-v", "--version"], :flag, "print version"
	
	def execute
		if version?
			puts "VERSION!"
		end
	end

  subcommand "flip", "flip it" do
    def execute
      puts "FLIPPED"
    end
  end

  subcommand "flop", "flop it" do
    def execute
      puts "FLOPPED"
    end
  end
  
end

FlipFlop.run
